# ==========================================
# AI Crew Builder Team - Environment Configuration
# ==========================================

# AI Provider API Keys
# --------------------
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ZHIPUAI_API_KEY=your_zhipuai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Project Configuration
# --------------------
PROJECT_NAME=AI-Crew-Builder-Team
PROJECT_VERSION=1.0.0
ENVIRONMENT=development

# Builder Team Configuration
# --------------------------
BUILDER_TEAM_PROVIDERS=claude,zhipuai
PROJECT_CREW_PROVIDER=openai

# AI Provider Settings
# --------------------
# Claude (Anthropic)
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.7

# ZhipuAI
ZHIPUAI_MODEL=glm-4.6
ZHIPUAI_MAX_TOKENS=4000
ZHIPUAI_TEMPERATURE=0.7

# OpenAI
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Cost Management
# ----------------
MONTHLY_BUDGET_CLAUDE=500.0
MONTHLY_BUDGET_ZHIPUAI=300.0
MONTHLY_BUDGET_OPENAI=1000.0
DAILY_BUDGET_CLAUDE=20.0
DAILY_BUDGET_ZHIPUAI=15.0
DAILY_BUDGET_OPENAI=50.0

# Logging Configuration
# ---------------------
LOG_LEVEL=INFO
LOG_FILE=logs/builder-team.log
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION=30

# Performance Settings
# --------------------
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT=300
REQUEST_TIMEOUT=60
MAX_RETRIES=3

# Database Configuration
# ----------------------
DATABASE_URL=sqlite:///data/builder_team.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration (for task queue)
# ------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_DB=0
REDIS_PASSWORD=

# OpenSpec Configuration
# --------------------
OPENSPEC_REPO_PATH=./openspec
OPENSPEC_AUTO_SYNC=true
OPENSPEC_CHANGE_TRACKING=true

# Git Configuration
# -----------------
GIT_AUTO_COMMIT=false
GIT_BRANCH_STRATEGY=feature-branches
GIT_REMOTE_NAME=origin

# Development Settings
# --------------------
DEBUG_MODE=true
VERBOSE_LOGGING=true
HOT_RELOAD=true
TEST_MODE=false

# Security Settings
# -----------------
API_KEY_ENCRYPTION=true
SESSION_TIMEOUT=3600
CORS_ORIGINS=*

# API Configuration
# -----------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# WebSocket Configuration
# ----------------------
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8001
WEBSOCKET_HEARTBEAT=30

# Template Configuration
# ----------------------
TEMPLATE_PATH=./templates
TEMPLATE_CACHE_SIZE=100
TEMPLATE_AUTO_RELOAD=true

# Monitoring and Health
# ---------------------
HEALTH_CHECK_INTERVAL=60
METRICS_COLLECTION=true
PERFORMANCE_TRACKING=true

# File Storage
# -------------
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=100MB
ALLOWED_EXTENSIONS=.txt,.md,.yaml,.json,.py

# Cache Configuration
# -------------------
CACHE_TYPE=memory
CACHE_SIZE=1000
CACHE_TTL=3600

# Rate Limiting
# -------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_ENABLED=true

# Backup Configuration
# --------------------
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_PATH=./backups
BACKUP_RETENTION=30

# Notification Settings
# ---------------------
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL=
NOTIFICATION_WEBHOOK_URL=

# Experimental Features
# ---------------------
EXPERIMENTAL_FEATURES=false
BETA_FEATURES=[]
ALPHA_FEATURES=[]